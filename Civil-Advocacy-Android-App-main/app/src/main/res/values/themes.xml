    <style name="Theme.Civil_Advocacy.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Civil_Advocacy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
