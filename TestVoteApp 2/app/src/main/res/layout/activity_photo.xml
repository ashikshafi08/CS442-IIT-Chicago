<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photoActConstraintId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity">

    <TextView
        android:id="@+id/locationPhotoAct"
        android:layout_width="412dp"
        android:layout_height="34dp"
        android:textColor="@color/white"
        android:background="@color/purple_200"
        android:padding="3dp"
        android:text="Chicago, IL"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/officialNamePhotoAct"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp"
        android:padding="5dp"
        android:text="Richard J Durbin"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/partyNamePhotoAct"
        app:layout_constraintEnd_toEndOf="@+id/locationPhotoAct"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/locationPhotoAct"
        app:layout_constraintTop_toBottomOf="@+id/locationPhotoAct"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/partyNamePhotoAct"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:padding="5dp"
        android:text="( Democratic Party )"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="@+id/officialNamePhotoAct"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/officialNamePhotoAct"
        app:layout_constraintTop_toBottomOf="@+id/officialNamePhotoAct" />

    <ImageView
        android:id="@+id/officialImagePhotoAct"
        android:layout_width="382dp"
        android:layout_height="383dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partyNamePhotoAct"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <ImageView
        android:id="@+id/partyLogoPhotoActId"
        android:layout_width="83dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toBottomOf="@+id/officialImagePhotoAct"
        app:layout_constraintEnd_toEndOf="@+id/officialImagePhotoAct"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/officialImagePhotoAct"
        app:layout_constraintTop_toTopOf="@+id/officialImagePhotoAct"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/dem_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>